{
    "include": [
        "src"
    ],
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "types": [
            "vite/client"
        ],
        "skipLibCheck": true,
        "esModuleInterop": false,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "noEmit": true,
        "outDir": "build",
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "src/scripts/*"
            ]
        }
    },
}